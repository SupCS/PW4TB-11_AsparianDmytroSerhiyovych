<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Поля введення для параметрів -->
    <EditText
        android:id="@+id/input_ux_max"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Максимальна напруга Ux_max" />

    <EditText
        android:id="@+id/input_snom_t"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Номінальна потужність Snom_t" />

    <EditText
        android:id="@+id/input_rc_n"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Опір Rш в нормальному режимі Rc_n" />

    <EditText
        android:id="@+id/input_xc_n"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Реактивний опір Xс в нормальному режимі Xc_n" />

    <EditText
        android:id="@+id/input_rc_min"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Опір Rш в мінімальному режимі Rc_min" />

    <EditText
        android:id="@+id/input_xc_min"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Реактивний опір Xс в мінімальному режимі Xc_min" />

    <EditText
        android:id="@+id/input_ub_n"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Базова напруга Ub_n" />

    <EditText
        android:id="@+id/input_unn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Реактивний опір трансформатора Unn" />

    <Button
        android:id="@+id/button_calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Розрахувати" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/result_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Результати з'являться тут"
            android:paddingTop="16dp" />
    </ScrollView>

    <Button
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Назад" />
</LinearLayout>
